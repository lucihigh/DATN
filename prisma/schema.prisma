generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String
  role         Role          @default(USER)
  createdAt    DateTime      @default(now())
  wallets      Wallet[]
  logins       LoginEvent[]
  audits       AuditLog[]
}

model Wallet {
  id        String        @id @default(cuid())
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  balance   Decimal       @default(0)
  currency  String        @default("USD")
  updatedAt DateTime      @updatedAt
  createdAt DateTime      @default(now())
  txns      Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  wallet      Wallet   @relation(fields: [walletId], references: [id])
  walletId    String
  amount      Decimal
  type        String
  description String?
  createdAt   DateTime @default(now())
}

model LoginEvent {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  ipAddress String
  userAgent String?
  anomaly   Float?
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  action    String
  details   String?
  createdAt DateTime @default(now())
}

model SecurityPolicy {
  id                String   @id @default(cuid())
  maxLoginAttempts  Int      @default(5)
  lockoutMinutes    Int      @default(15)
  rateLimitPerMin   Int      @default(60)
  createdAt         DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
